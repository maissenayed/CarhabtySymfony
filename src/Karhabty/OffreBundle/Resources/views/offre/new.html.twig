{% extends 'layout/LayoutPartner.twig' %}

{% block content %}






    <div class="portlet box blue-hoki">
        <div class="portlet-body form">
            <div class="form-horizontal">
                <div class="form-body">
                    <h1>Ajouter offre</h1>
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label class="col-md-3 control-label">Nom de l'offre</label>
                        <div class="col-md-4">
                            <div class="input-group">


                                {{ form_widget(form.nomOffre, { 'attr': {'class': 'form-control'  } }) }}

                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label">Description  offre</label>
                        <div class="col-md-4">
                            <div class="input-group">

                                {{ form_widget(form.descriptionOffre, { 'attr': {'class': 'form-control','cols':'50','rows':'10'} }) }}

                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label">Prix offre</label>
                        <div class="col-md-4">
                            <div class="input-group">

                                {{ form_widget(form.prix, { 'attr': {'class': 'form-control'  } }) }}

                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-md-3 control-label">RÃ©duction offre</label>
                        <div class="col-md-4">
                            <div class="input-group">

                                {{ form_widget(form.tauxReduction, { 'attr': {'class': 'form-control'  } }) }}


                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Thumbnail offre</label>
                        <div class="col-md-4">
                            <div class="input-group">

                                {{ form_widget(form.imageFile, { 'attr': {'class': 'form-control'  } }) }}


                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label">Date d'expiration offre</label>
                        <div class="col-md-4">
                            <div class="input-group">

                                {{ form_widget(form.dateExpirationOffre, { 'attr': {'class': 'form-control'  } }) }}


                            </div>
                        </div>
                    </div>



                    <div class="form-actions top">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-4">

                                <input type="submit" class="btn green" value="Ajouter l'offre" />
                                {{ form_end(form) }}
                                <button class="btn yello"><a href="{{ path('offre_index') }}">Retour vers les offres</a></button>




                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>












{% endblock %}
