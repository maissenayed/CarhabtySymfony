{% extends 'layout/LayoutUser.html.twig' %}




{% block content %}

    <script src="{{ asset('assets/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>




    {% for offre in offres %}




        <script>



            $(document).ready(function() {

                $.ajax({

                    url: Routing.generate('count'),
                    type: 'POST', // Send post data
                    data: {id: {{ offre.idOffre }}},
                    async: false,
                    success: function (s) {


                      json_events = s;

                        nbachteur=json_events[0][1];
                        document.getElementById('{{ offre.idOffre }}').innerHTML="Achet√©(s) :"+nbachteur ;


                    }
                });


            });


        </script>





        <div class="row">
        <div class="col-md-12">
            <!-- BEGIN Portlet PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">

                    <div class="well well-lg">
                        <h4 class="block" style="font-family: Verdana; font-size: 25px">{{ offre.nomOffre}}</h4>
                    </div>

                </div>
                <div class="portlet-body">
                    <div class="row">
                    <div class="col-md-5">
                        <img class="media-object img-rounded" width="400px" height="400px"  src="{{ asset(vich_uploader_asset(offre, 'imageFile')) }}" />
                    </div>

                    <div class="col-md-7">



                        <a class="btn yellow-gold btn-block btn-lg m-icon-big" style="font-size: 30px">{{ offre.prix - ((offre.prix * offre.tauxReduction)/100) }}DT
                            <br><s style="font-size: 20px">{{ offre.prix }}DT</s>

                        </a>




                        <br>
                        <a  class="btn  yellow-gold btn-block btn-lg m-icon-big" style="font-size: 30px">{{ offre.tauxReduction }}%
                        </a>

                        <br>
                        <a class="btn  yellow-gold btn-block btn-lg m-icon-big" style="font-size: 30px"><i class="fa fa-map-marker"></i> {{ offre.user.adresse }}
                        </a>
                        <br>
                        <a  class="btn  yellow-gold btn-block btn-lg m-icon-big" id="{{ offre.idOffre }}" style="font-size: 30px">
                        </a>


                        <br>
                        <button type="button" class="btn red btn-block"><a style="text-decoration: none;color: inherit;font-size: 30px" href="{{ path('offre_details', { 'id': offre.idOffre }) }}">Voir l'offre</a></button>



                      </div>
                   </div>
                </div>
             </div><!-- END Portlet PORTLET-->
          </div>
       </div>


    {% endfor %}


{% endblock %}
