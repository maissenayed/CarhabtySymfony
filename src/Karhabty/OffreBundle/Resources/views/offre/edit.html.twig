{% extends 'layout/LayoutPartner.twig' %}

{% block content %}


<div class="portlet box blue-hoki">
<div class="portlet-body form">
    <div class="form-horizontal">
         <div class="form-body">
         <h1>Modifer offre</h1>
         {{ form_start(edit_form) }}
        <div class="form-group">
            <label class="col-md-3 control-label">Nom de l'offre</label>
            <div class="col-md-4">
                <div class="input-group">


                    {{ form_widget(edit_form.nomOffre, { 'attr': {'class': 'form-control'  } }) }}

                </div>
            </div>
        </div>


        <div class="form-group">
            <label class="col-md-3 control-label">Description  offre</label>
            <div class="col-md-4">
                <div class="input-group">

                    {{ form_widget(edit_form.descriptionOffre, { 'attr': {'class': 'form-control','cols':'50','rows':'10'} }) }}

                </div>
            </div>
        </div>


        <div class="form-group">
            <label class="col-md-3 control-label">Prix offre</label>
            <div class="col-md-4">
                <div class="input-group">

                    {{ form_widget(edit_form.prix, { 'attr': {'class': 'form-control'  } }) }}

                </div>
            </div>
        </div>



        <div class="form-group">
            <label class="col-md-3 control-label">RÃ©duction offre</label>
            <div class="col-md-4">
                <div class="input-group">

                    {{ form_widget(edit_form.tauxReduction, { 'attr': {'class': 'form-control'  } }) }}


                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label">Thumbnail offre</label>
            <div class="col-md-4">
                <div class="input-group">

                    {{ form_widget(edit_form.imageFile, { 'attr': {'class': 'form-control'  } }) }}


                </div>
            </div>
        </div>


             <div class="form-group">
                 <label class="col-md-3 control-label">Date d'expiration offre</label>
                 <div class="col-md-4">
                     <div class="input-group">

                         {{ form_widget(edit_form.dateExpirationOffre, { 'attr': {'class': 'form-control'  } }) }}


                     </div>
                 </div>
             </div>



        <div class="form-actions top">
            <div class="row">
                <div class="col-md-offset-4 col-md-4">

                    <input type="submit" class="btn blue" style="width:138px;" value="Modifier l'offre" />
                    {{ form_end(edit_form) }}
                    {{ form_start(delete_form) }}
                    <input type="submit" class="btn red" value="Supprimer l'offre">
                    {{ form_end(delete_form) }}

                </div>
             </div>
           </div>
        </div>
     </div>
   </div>
</div>



{% endblock %}









