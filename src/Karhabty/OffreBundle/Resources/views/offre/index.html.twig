{% extends 'layout/LayoutPartner.twig' %}

{% block content %}
    <h1>Offres list</h1>

    <table>
        <thead>
            <tr>
                <th>Idoffre</th>
                <th>Nomoffre</th>
                <th>Descriptionoffre</th>
                <th>Prix</th>
                <th>Tauxreduction</th>
                <th>date de l'ajout</th>
                <th>date d'expiration</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>

                <td>{{ offre.nomOffre }}</td>
                <td>{{ offre.descriptionOffre }}</td>
                <td>{{ offre.prix }}</td>
                <td>{{ offre.tauxReduction }}</td>
                <td>{{ offre.date | date }}</td>
                <td>{{ offre.dateExpirationOffre | date }}</td>
                <td><img src="{{ asset(vich_uploader_asset(offre, 'imageFile')) }}"></td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('offre_show', { 'id': offre.idOffre }) }}">Affiche l'offres</a>
                        </li>
                        <li>
                            <a href="{{ path('offre_edit', { 'id': offre.idOffre }) }}">Modifier l'offres</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
