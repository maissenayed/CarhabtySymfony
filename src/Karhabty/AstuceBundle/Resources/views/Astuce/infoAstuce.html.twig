{% extends 'Layout/LayoutUser.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
    <link href="{{ asset('assets/ahlem/css/star-rating.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/ahlem/css/theme.min.css') }}" rel="stylesheet" type="text/css" />
    {%  endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.js"></script>
     <script src="{{  asset('assets/ahlem/js/star-rating.min.js') }}" type="text/javascript"></script>
     <script src="{{  asset('assets/ahlem/js/theme.min.js') }}" type="text/javascript"></script>


 {%  endblock %}
{% block content %}


        <h1>{{ i.theme }}</h1>


        <div class="row">
            <div class="col-sm-6 col-md-12">

                    <div style="width:50%; float:left;">
                        <img style="height:299px;width:450px;display: block;"
                             src="{{ asset(vich_uploader_asset(i, 'imageFile')) }}" alt="{{ i.theme }}"/>
                    </div>
                    <div style="width: 50%; float:right;">
                        <div class="caption">
                            <h3>{{ i.titre }}</h3>
                            <p>{{ i.description }}</p>
                            <p>

                                <a class="btn btn-circle btn-icon-only btn-default" href="{{ path('deleteAstuce', {'id':i.id}) }}" >
                                    <i class="icon-trash"></i>
                                </a>

                                <a class="btn btn-circle btn-icon-only btn-default" href="{{ path('updateAstuce', {'id':i.id}) }}">
                                    <i class="icon-wrench"></i>
                                </a>
                                <a class="btn btn-circle btn-icon-only btn-default" href="{{ path('updateAstuce', {'id':i.id}) }}">
                                    <i class="fa fa-commenting-o"></i>
                                </a>
                                <input id="input-id" type="text" class="rating" data-size="xs" >
                            {{ form_start(form) }}
                            <h3>Ajouter un commentaire</h3>
                            {{ form_widget (form.commentaire,{ 'attr': {'class':'form-control','row':'3' }}) }}
                            <button type="submit" class="btn btn-circle btn-success">Success</button>

                            {{ form_end(form) }}
                            </p>
                        </div>
                    </div>

            </div>
        </div>





    <div class="related-products-wrapper">
        <h3 class="related-products-title">Related Astuces</h3>
        <div class="related-products-carousel">
            {% for relatedAstuce in relatedAstuces %}
                <div class="single-product">

                    <div class="product-f-image">
                        <h3>{{ relatedAstuce.titre }}</h3>
                        <img src="{{ asset(vich_uploader_asset(relatedAstuce, 'imageFile')) }}"
                             style="min-height:233px;height:233px;min-width:350px;width:350px;" alt="{{ relatedAstuce.theme }}"/>
                        <div class="product-hover">
                            <a href="{{ path('infoAstuce', {'id' : relatedAstuce.id} ) }}" class="view-details-link"><i
                                        class="fa fa-link"></i> Voir détails </a>
                        </div>
                    </div>



                </div>
            {% endfor %}
            <div class="single-sidebar">
                <h3 class="sidebar-title">les astuces récentes </h3>
                <div class="thubmnail-recent">
                    {% for recentAstuce in recentAstuces %}

                        <h3>{{ recentAstuce.titre }}</h3>
                        <img src="{{ asset(vich_uploader_asset(recentAstuce, 'imageFile')) }}"
                             style="min-height:233px;height:233px;min-width:350px;width:350px;" alt="{{ recentAstuce.theme }}"/>
                        <div class="product-hover">
                            <a href="{{ path('infoAstuce', {'id' : recentAstuce.id} ) }}" class="view-details-link"><i
                                        class="fa fa-link"></i> Voir détails </a>
                        </div>


                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}