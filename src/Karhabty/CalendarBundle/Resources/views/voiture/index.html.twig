                                    <tr>

                                        <th>Marque</th>
                                        <th>Annee</th>
                                        <th>Model</th>

                                    </tr>
                                    </thead>
                                    <tbody>

                                    <tr>

                                        <td><span class="badge badge-danger">{{ voiture.marque }}</span></td>
                                        <td><span class="badge badge-danger">{% if voiture.annee %}{{ voiture.Annee|date('Y-m-d') }}{% endif %}</span></td>
                                        <td><span class="badge badge-danger">{{ voiture.Model }}</span></td>



                                    </tr>

                                    </tbody>
                                </table>





                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-md-3">
                                        <a id="dude" href="{{ path('voiture_show', { 'id': voiture.id }) }} "  value="{{ voiture.id }}" class="btn default" > show
