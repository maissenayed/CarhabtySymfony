{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonces list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Anneedeproduit</th>
                <th>Anneepub</th>
                <th>Model</th>
                <th>Marque</th>
                <th>Region</th>
                <th>Ville</th>
                <th>Paye</th>
                <th>Prix</th>
                <th>Category</th>
                <th>Imagename</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{{ annonce.title }}</td>
                <td>{% if annonce.AnneeDeProduit %}{{ annonce.AnneeDeProduit|date('Y-m-d') }}{% endif %}</td>
                <td>{% if annonce.AnneePub %}{{ annonce.AnneePub|date('Y-m-d') }}{% endif %}</td>
                <td>{{ annonce.Model }}</td>
                <td>{{ annonce.Marque }}</td>
                <td>{{ annonce.Region }}</td>
                <td>{{ annonce.Ville }}</td>
                <td>{{ annonce.Paye }}</td>
                <td>{{ annonce.Prix }}</td>
                <td>{{ annonce.Category }}</td>
                <td>{{ annonce.imageName }}</td>
                <td>{% if annonce.updatedAt %}{{ annonce.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('annonce_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_new') }}">Create a new annonce</a>
        </li>
    </ul>
{% endblock %}
