{% extends 'layout/LayoutUser.html.twig' %}

{% block content %}
    <h1>Event</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ event.photo }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Access</th>
                <td>{{ event.access }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ event.address }}</td>
            </tr>
            <tr>
                <th>Eventdate</th>
                <td>{% if event.eventDate %}{{ event.eventDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if event.createdDate %}{{ event.createdDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updateddate</th>
                <td>{% if event.updatedDate %}{{ event.updatedDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

<div class="portlet-body">
    <div class="tab-content">
        <div class="tab-pane active" id="tab_actions_pending">
            <!-- BEGIN: Actions -->
            {% for participationRequest in participationRequests %}
            <div class="mt-actions">
                <div class="mt-action">
                        <div class="mt-action-row">
                            <div class="mt-action-info ">

                                <div class="mt-action-details ">
                                    <span class="mt-action-author">{{ participationRequest.user.nom }} {{ participationRequest.user.prenom}}</span>
                                </div>
                            </div>
                            <div class="mt-action-buttons ">
                                <div class="btn-group btn-group-circle">
                                    <button type="button" class="btn btn-outline green btn-sm"><a  href="{{ path('event_accept', { 'id': participationRequest.id }) }}">Accepter</a></button>
                                    <button type="button" class="btn btn-outline red btn-sm"><a href="{{ path('event_decline', { 'id': participationRequest.id }) }}">Refuser</a></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <!-- END: Actions -->
            </div>
        </div>
    </div>

{% endblock %}