{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path('fos_user_change_password') }}" class="form-horizontal" method="POST">
    <div class="form-group col-md-7" id="fos_user_change_password">


        <div class="form-group">
            <label class="col-md-3 control-label">Mot de passe Actuel</label>
            <div class="col-md-4">
                <div class="input-group">
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.current_password) }}
                    <span class="input-group-addon">
                    <i class="fa fa-envelope"></i>
                     </span>
                </div>
            </div>
        </div>



        <div class="form-group">
            <label class="col-md-3 control-label">Nouveau mot de passe</label>
            <div class="col-md-4">
                <div class="input-group">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.plainPassword.first) }}
                    <span class="input-group-addon">
                    <i class="fa fa-envelope"></i>
                     </span>
                </div>
            </div>
        </div>


        <div class="form-group">
            <label class="col-md-3 control-label">Répéter le Nouveau mot de passe</label>
            <div class="col-md-4">
                <div class="input-group">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}

                    <span class="input-group-addon">
                    <i class="fa fa-envelope"></i>
                     </span>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}


        <div class="form-actions top">
            <div class="row">
                <div class="col-md-offset-3 col-md-2">
                    <input type="submit" class="btn green" value="{{ 'change_password.submit'|trans }}"/>
                </div>
            </div>
        </div>
    </div>
</form>