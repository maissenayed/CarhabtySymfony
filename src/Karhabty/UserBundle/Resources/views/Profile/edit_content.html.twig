{% trans_default_domain 'FOSUserBundle' %}



<form action="{{ path('fos_user_profile_edit') }}" class="form-horizontal" method="POST">
    <div class="form-group col-md-7" id="fos_user_registration_form">
<div class="form-group">
    <label class="col-md-3 control-label">Email</label>
    <div class="col-md-4">
        <div class="input-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
            {{ form_errors(form.email) }}
            <span class="input-group-addon">
                    <i class="fa fa-envelope"></i>
                     </span>
        </div>
    </div>
</div>


    <div class="form-group">
        <label class="col-md-3 control-label">Nom d'utilisateur</label>
        <div class="col-md-4">
            <div class="input-group">
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                {{ form_errors(form.username) }}
                <span class="input-group-addon">
                  <i class="fa fa-user"></i>
                  </span>
            </div>
        </div>
    </div>


    <div class="form-group">
        <label class="col-md-3 control-label">Mot de passe Actuel</label>
        <div class="col-md-4">
            <div class="input-group">
                {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
                {{ form_errors(form.current_password) }}
                <span class="input-group-addon">
                <i class="fa fa-lock"></i>
                </span>
            </div>
        </div>
    </div>


    <div class="form-actions top">
        <div class="row">
            <div class="col-md-offset-3 col-md-2">
                <input type="submit" class="btn green" value="{{ 'profile.edit.submit'|trans }}"/>
            </div>
        </div>
    </div>
    </div>
</form>
{{ form_end(form) }}
