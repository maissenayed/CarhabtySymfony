{% extends 'layout/LayoutUser.html.twig' %}

{% block content %}
    <h1>Offre</h1>

    <table>
        <tbody>
            <tr>
                <th>Idoffre</th>
                <td>{{ offre.idOffre }}</td>
            </tr>
            <tr>
                <th>Nomoffre</th>
                <td>{{ offre.nomOffre }}</td>
            </tr>
            <tr>
                <th>Descriptionoffre</th>
                <td>{{ offre.descriptionOffre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ offre.prix }}</td>
            </tr>
            <tr>
                <th>Tauxreduction</th>
                <td>{{ offre.tauxReduction }}</td>
            </tr>
            <tr>
                <th>Typeoffre</th>
                <td>{{ offre.typeOffre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <img src="{{ asset(vich_uploader_asset(offre, 'imageFile')) }}"></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('offre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('offre_edit', { 'id': offre.idOffre }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
